{
   "manifest_version": 3,
   "name": "GhostType",
   "short_name": "GhostType",
   "version": "2.1",
   "description": "Smart clipboard automation tool by Aditya Tipirneni.",
   "author": "Aditya Tipirneni",
   "permissions": [
      "storage",
      "unlimitedStorage"
   ],
   "action": {
      "default_icon": "images/icon128.png",
      "default_popup": "index.html",
      "default_title": "GhostType"
   },
   "icons": {
      "128": "images/icon128.png"
   },
   "content_scripts": [
      {
         "js": [
            "dependencies/jquery/jquery-3.6.1.min.js",
            "scripts/script.js"
         ],
         "matches": [
            "<all_urls>"
         ]
      }
   ]
}